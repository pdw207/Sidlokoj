<h2>Sign up</h2>
<div class="row">
  <div class="small-4 small-centered columns">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div cass="row">
      <div class="small-0 large-6 columns">
        <%= f.input :first_name, label: "First Name", required: true %>
      </div>
      <div class="small-0 large-6 columns">
        <%= f.input :last_name, label: "Last Name", required: true %>
      </div>
    </div>
    <div cass="row">
      <div class="medium-12 columns">
        <%= f.input :email, required: true, autofocus: true %>
        <%= f.input :admin, label: 'Role',collection: [['Principal', true], ['Teacher',false]], as: :radio_buttons, boolean_style: :inline %>
        <%= f.input :password, required: true %>
        <%= f.input :password_confirmation, required: true %>
      </div>
    </div>
    <footer>
      <%= f.button :submit, "Sign Up" %>
    </footer>
    <% end %>
  </div>
</div>

